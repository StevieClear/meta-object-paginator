{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.js"
    },
    {
      "src": "/coas",
      "dest": "api/index.js"
    },
    {
      "src": "/health",
      "dest": "api/index.js"
    },
    {
      "src": "/auth/callback",
      "dest": "api/index.js"
    },
    {
      "src": "/webhooks/(.*)",
      "dest": "api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "app/entry.server.jsx"  // React Router frontend (if exists; otherwise api/index.js)
    }
  ]
}